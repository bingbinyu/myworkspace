\ProvidesPackage{beamerouterthemeti2}

\mode<presentation>

\setbeamercolor{section in head/foot}{parent=palette quaternary}
\setbeamercolor{subsection in head/foot}{parent=palette primary}

\setbeamercolor{author in head/foot}{parent=section in head/foot}
\setbeamercolor{title in head/foot}{parent=subsection in head/foot}

\usesectionheadtemplate
  {\hfill\insertsectionhead}
  {\hfill\color{fg!50!bg}\insertsectionhead}
%  {\hfill\color{fg}\insertsectionhead}

                                % Head
\ifbeamer@compress

\defbeamertemplate*{headline}{split theme}
{%
  \leavevmode%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.5ex,dp=1.125ex]{section in head/foot}%
%    \insertsectionnavigationhorizontal{.5\paperwidth}{\hskip0pt plus1filll}{}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.5ex,dp=1.125ex]{subsection in head/foot}%
%    \insertsubsectionnavigationhorizontal{.5\paperwidth}{}{\hskip0pt plus1filll}%
  \end{beamercolorbox}%
}

\else

\defbeamertemplate*{headline}{split theme}
{%
  \leavevmode%
  \begin{beamercolorbox}[wd=.8\paperwidth,ht=3.5em,dp=1.5em]{section in head/foot}%
%  \begin{beamercolorbox}[wd=.5\paperwidth,ht=3.5em,dp=1.5em]{section in head/foot}%
    \hskip2em
    \includegraphics[height=2em]{ti2-logo}
%    \insertsectionnavigationhorizontal{.5\paperwidth}{}{\hskip0pt plus1filll}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.2\paperwidth,ht=3.5em,dp=0em]{subsection in head/foot}%
%  \begin{beamercolorbox}[wd=.5\paperwidth,ht=3.5em,dp=0em]{subsection in head/foot}%
  \end{beamercolorbox}%
}

\fi


\defbeamertemplate*{footline}{split theme}
{%
  \leavevmode%
  \hbox{\begin{beamercolorbox}[wd=.5\paperwidth,ht=5.5ex,dp=1.125ex,leftskip=.3cm]{author in head/foot}%

%    \usebeamerfont{author in head/foot}\insertshortauthor
    \includegraphics[height=4.5ex]{uni-bremen-logo}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=5.5ex,dp=1.125ex,leftskip=.3cm]{title in head/foot}%
    \usebeamerfont{title in head/foot}\insertshortauthor: 
    \usebeamerfont{title in head/foot}\insertshorttitle
    \usebeamerfont{title in head/foot}\hfill\insertframenumber\,/\,\inserttotalframenumber\hspace{1em}
  \end{beamercolorbox}}%
  \vskip0pt%
}


\mode
<all>
